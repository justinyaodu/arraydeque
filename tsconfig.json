{
  "compilerOptions": {
    "target": "es2015",
    "module": "nodenext",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
